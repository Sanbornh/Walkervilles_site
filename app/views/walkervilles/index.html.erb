    <div class="text">
     <div class="tour-dates-wrapper">
      <div class="social-wrapper">
        <%= link_to "http://instagram.com/walkervilles", target: '_blank' do %>
          <i class="fa fa-instagram"></i>
        <% end %>

        <%= link_to "https://twitter.com/Walkervilles", target: '_blank' do %>
          <i class="fa fa-twitter"></i>
        <% end %>

        <%= link_to "https://www.facebook.com/Walkervilles", target: '_blank' do %>
          <i class="fa fa-facebook"></i>
        <% end %>
      </div>
      
      <div class="title-wrapper">
        <h1 id="walkervilles">The Walkervilles  </h1> <h1 id="cool"> ON TOUR NOW </h1>
      </div>
      <div class="table-wrapper">
        <% if @tour_dates %>
          
           <% @tour_dates.each do |date| %>
            <div class="single-date-wrapper">    
                <div class="date-cell tour-cell"><h2><%= date["datetime"].to_datetime.strftime('%b %d') %></h2></div>
                <div class="tour-cell venue"><%= date["venue"]["name"] %></div>

                <% if date["venue"]["region"] =~ /\d/ %>
                  <div class="tour-cell"><%= date["venue"]["city"] %></div>
                <% else %>
                  <div class="tour-cell"><%= date["venue"]["city"] + ", " + date["venue"]["region"] %></div>
                <% end %>

                <% if date["ticket_status"] == "available" %>
                  <div class="tickets-link tour-cell">
                    <%= link_to date["ticket_url"], target: '_blank' do %>
                      Get Tickets!
                    <% end %>
                  </div>
                <% else %>
                  <!-- <div class="tour-cell"></div> -->
                <% end %>
            </div>    
            <% end %>
          
        <% end %>
      </div>
    </div>

  </div>
</div>